# This simple game is about guessing a randomly picked by computer.

import random

def guess(x):
    guess = int(input(f'Guess a secret number between 1 and {x}: '))
    secret_number = random.randint(1, x)
    guess_count = 0
    while guess != secret_number:
        if guess > secret_number:
            print('Your number is too HIGH, try again!')
            guess_count += 1
            guess = int(input(f'Guess a secret number between 1 and {x}: '))
        else:
            print('Your number is too LOW try again!')
            guess_count += 1
            guess = int(input(f'Guess a secret number between 1 and {x}: '))
    else:
        print(f'Congrats! You have tried {guess_count + 1} times and you guessed it right, the secret number is {secret_number}.')

def main():
    number_range = int(input('Please input your secret number range, 1 to ?: '))
    guess(number_range)

main()
